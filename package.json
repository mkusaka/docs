{
  "name": "docs",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mkusaka/docs.git",
  "author": "mkusaka <hinoshita1992@gmail.com>",
  "license": "MIT",
  "engines": {
    "yarn": ">1.13.0"
  },
  "scripts": {
    "lint": "textlint `find content/**/*.md`",
    "lint:fix": "textlint --fix `find content/**/*.md`",
    "gitbook:install": "cd content && gitbook install && cd ..",
    "gitbook:dev": "yarn run gitbook:install && cd content && gitbook serve && cd..",
    "gitbook:build": "cd content && gitbook build . \"../public\" && cd ..",
    "prettier": "prettier",
    "toc": "doctoc `find content/**/*.md`",
    "mc": "mdoctoc"
  },
  "husky": {
    "hooks": {
      "pre-push": "bin/commithook",
      "pre-commit": "yarn run lint"
    }
  },
  "devDependencies": {
    "@mkusaka/toc": "^0.0.9",
    "cryptiles": "^4.1.3",
    "gitbook-cli": "^2.3.2",
    "husky": "^1.1.2",
    "prettier": "^1.16.4",
    "textlint": "^11.2.2",
    "textlint-rule-max-ten": "^2.0.3",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  },
  "dependencies": {
    "doctoc": "^1.4.0"
  }
}
